@model Form

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Dojo Survey</title>
        <link rel="stylesheet" href="~/css/style.css" />
    </head>
    <body>
        <div class="frame">
            <form asp-action="result" asp-controller="Form" method="post">
                <span asp-validation-for="Name" class="error"></span>
                <div class="input">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name"/>
                </div>
                <span asp-validation-for="Location" class="error"></span>
                <div class="input">
                    <label asp-for="Location">Dojo Location</label>
                    <select asp-for="Location" class="input">
                        <Option value="Los Angeles">Los Angeles</Option>
                        <Option value="San Jose">San Jose</Option>
                        <Option value="Chicago">Chicago</Option>
                    </select>
                </div>
                <span asp-validation-for="Language" class="error"></span>
                <div class="input">
                    <label asp-for="Language">Favorite Language</label>
                    <select asp-for="Language" class="input">
                        <option value="C#">C#</option>
                        <option value="Java">Java</option>
                        <option value="Python">Python</option>
                        <option value="MERN">MERN</option>
                    </select>
                </div>
                <span asp-validation-for="Comments" class="error"></span>
                <div class="input">
                    <label asp-for="Comments">Comments</label>
                    <input asp-for="Comments" class="input"/>
                </div>
                <div class="button">
                    <button type="submit" class="button">Submit</button>
                </div>
            </form>
        </div>
    </body>
</html>

